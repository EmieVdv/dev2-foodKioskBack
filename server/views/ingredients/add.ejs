<%- contentFor('body') %>
<div class="card">
  <div class="card-header">
    <h2 class="mb-0">Add New Ingredient</h2>
  </div>
  <div class="card-body">
    <form action="/ingredients" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" required>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price (â‚¬)</label>
        <input type="number" class="form-control" id="price" name="price" step="0.01" min="0" required>
      </div>

      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select class="form-select" id="category" name="category_id" required>
          <option value="">Select a category</option>
          <% categories.forEach(category => { %>
            <option value="<%= category.category_id %>"><%= category.name %></option>
          <% }); %>
        </select>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input type="file" class="form-control" id="image" name="image" accept="image/*">
      </div>

      <div class="d-flex justify-content-between">
        <a href="/ingredients" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-success">Add Ingredient</button>
      </div>
    </form>
  </div>
</div> 