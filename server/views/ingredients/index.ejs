<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Ingredients - Backend Food Kiosk</title>
    <link href="/scss/style.css" rel="stylesheet" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <main class="container mt-5">
      <h1 class="text-center mb-4">Ingredients</h1>

      <!-- Add New Ingredient Button -->
      <div class="text-end mb-3">
        <a href="/ingredients/add" class="btn btn-success">+ Add New Ingredient</a>
      </div>

      <!-- Ingredients Table -->
      <div class="card">
        <div class="card-header">
          <h2 class="mb-0">All Ingredients</h2>
        </div>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Price</th>
              <th>Category</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (ingredients && ingredients.length > 0) { %>
              <% ingredients.forEach((ingredient) => { %>
                <tr>
                  <td><%= ingredient.name %></td>
                  <td>â‚¬<%= ingredient.price %></td>
                  <td><%= ingredient.category_name || 'No category' %></td>
                  <td>
                    <a href="/ingredients/<%= ingredient.ingredient_id %>/edit" class="btn btn-primary btn-sm">Edit</a>
                    <form action="/ingredients/<%= ingredient.ingredient_id %>/delete" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="4" class="text-center">No ingredients found.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
