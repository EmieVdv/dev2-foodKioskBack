<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Orders - Backend Food Kiosk</title>
  <link href="/scss/style.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <main class="container mt-5">
    <h1 class="text-center mb-4">Orders</h1>

    <!-- Orders Table -->
    <div class="card">
      <div class="card-header">
        <h2 class="mb-0">All Orders</h2>
      </div>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Kiosk</th>
            <th>Customer</th>
            <th>Total Price</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (orders && orders.length > 0 ) { %>
            <% orders.forEach((order) => { %>
              <tr>
                <td><%= order.order_id %></td>
                <td><%= order.kiosk_name %></td>
                <td><%= order.customer_name %></td>
                <td>â‚¬<%= order.total_price %></td>
                <td>
                  <% 
                    let badgeClass = 'bg-secondary';
                    if (order.status) {
                      const status = order.status.toLowerCase();
                      if (status === 'pending') badgeClass = 'bg-warning';
                      else if (status === 'completed') badgeClass = 'bg-success';
                      else if (status === 'cancelled') badgeClass = 'bg-danger';
                      else if (status === 'processing') badgeClass = 'bg-info';
                    }
                  %>
                  <span class="badge <%= badgeClass %>">
                    <%= order.status %>
                  </span>
                </td>

                <td>
                  <% 
                    let formattedDate = order.created_at;
                    try {
                      const date = new Date(order.created_at);
                      formattedDate = date.toLocaleString();
                    } catch (e) {
                      // Keep original if date parsing fails
                    }
                  %>
                  <%= formattedDate %>
                </td>
                <td>
                  <a href="/orders/<%= order.order_id %>" class="btn btn-primary btn-sm">View Details</a>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="7" class="text-center">No orders found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
