<!-- server/views/orders/content.ejs -->
<div class="card">
  <div class="card-header">
    <h2 class="mb-0">All Orders</h2>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Kiosk</th>
            <th>Customer</th>
            <th>Total Price</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (orders && orders.length > 0) { %>
            <% orders.forEach((order) => { %>
              <tr>
                <td><%= order.order_id %></td>
                <td><%= order.kiosk_name %></td>
                <td><%= order.customer_name %></td>
                <td>â‚¬<%= Number(order.total_price).toFixed(2) %></td>
                <td>
                  <% 
                    let badgeClass = 'bg-secondary';
                    if (order.status) {
                      const status = order.status.toLowerCase();
                      if (status === 'pending') badgeClass = 'bg-warning';
                      else if (status === 'completed') badgeClass = 'bg-success';
                      else if (status === 'cancelled') badgeClass = 'bg-danger';
                      else if (status === 'processing') badgeClass = 'bg-info';
                    }
                  %>
                  <span class="badge <%= badgeClass %>">
                    <%= order.status %>
                  </span>
                </td>
                <td>
                  <% 
                    let formattedDate = order.created_at;
                    try {
                      const date = new Date(order.created_at);
                      formattedDate = date.toLocaleString();
                    } catch (e) {
                      // Keep original if date parsing fails
                    }
                  %>
                  <%= formattedDate %>
                </td>
                <td>
                  <a href="/orders/<%= order.order_id %>" class="btn btn-primary btn-sm">View Details</a>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="7" class="text-center">No orders found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
